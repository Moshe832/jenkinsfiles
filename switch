
pipeline {
    agent {label'remote'}
    parameters { choice(name: '', choices: ['PROD', 'QA', 'DEV', 'STAGE', ], description: 'SELECT THE DOCKER REGISTRY ') }
    stages {
        stage('Select docker registry') {
            steps {
                script {
                    def result = ''

                    switch ("DOCKER_REGISTRY") {
                        case 'DEV':
                            result = 'DEV!'

                            agent { label 'remote' }
                                    steps {
                                script {
                                    powershell '''
                                            write-host "dev"

                                           '''

                                          break
                                          }
                                              }
                                          case 'DEV':
                                           result = 'pord!'

                                            agent { label 'remote' }

                                                steps {
                                            script {
                                                powershell '''
                                                        write-host "prod"

                                                    '''
                                                 break
                                            }
                                                                       }                       }
                                    }
                    }
                }
            }
        }
    
