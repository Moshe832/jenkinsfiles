Get-DnsServerResourceRecord -ZoneName $zoneName -ComputerName $dnsServer | Where-Object { $_.RecordData.IPv4Address -eq "192.196.1.1" } | ForEach-Object {
   Set-DnsServerResourceRecord -ZoneName $zoneName -ComputerName $dnsServer -Name $_.HostName -RecordType A -Force -NewData @{
       IPv4Address = "192.196.1.2"  # Replace with the desired new IP address
   }
}# This script updates all A records in a specified DNS zone that have the IP address


Import-Module DnsServer

Get-DnsServerResourceRecord -ZoneName $zoneName -ComputerName $dnsServer | Where-Object { $_.RecordData.IPv4Address -eq "192.196.1.1" } | ForEach-Object {
   Set-DnsServerResourceRecord -ZoneName $zoneName -ComputerName $dnsServer -OldInputObject $_ -NewInputObject (New-DnsServerResourceRecordA -Name $_.HostName -IPv4Address "192.196.1.2") -Force
}
# This script updates all A records in a specified DNS zone that have the IP address
