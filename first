
pipeline {
parameters{
        choice(name: 'CHOICE', choices: ['One', 'node', 'Three'], description: 'Pick something')

}
    options { timestamps() }
    
    agent { label params.CHOICE }
    stages {
        stage('hello') {
            steps {
                powershell '''

                               write-host "hello"

                               gci -path c:\\node
                               '''
            }
        } 
    }
}
